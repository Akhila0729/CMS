    <div class="col-sm-10">
        <div class="tab-content">
            <div id="addchild" class="tab-pane fade in active">
                <h1 class="nice">ADD CHILD</h1>
                <form class="form-horizontal" method="post" action="/addChild">
                    <!-- firstname input-->
                    <div class="form-group">
                        <label class="col-md-4 control-label" for="password">First Name</label>
                        <div class="col-md-4">
                            <input id="childFirstName" name="childFirstName" type="text" placeholder="Please enter Firstname" class="form-control input-md" required="">                            
                        </div>
                    </div>

                    <!-- lastname input-->
                    <div class="form-group">
                        <label class="col-md-4 control-label" for="password">Last Name</label>
                        <div class="col-md-4">
                            <input id="childLastName" name="childLastName" type="text" placeholder="Please enter Lastname" class="form-control input-md" required="">                            
                        </div>
                    </div>

                    <!-- Gender Input -->
                <div class="form-group">
                        <label class="col-md-4 control-label">Gender</label>
                        <div class="col-md-4">
                            <select name="childGender" class="form-control">
                                <option value="male">male</option>
                                <option value="female">female</option>
                            </select>
                        </div>
                    </div>

                    <!-- Email input-->
                    <div class="form-group">
                        <label class="col-md-4 control-label" for="password">Email</label>
                        <div class="col-md-4">
                            <input id="childEmail" name="childEmail" type="email" placeholder="Please enter email" class="form-control input-md" required="">                            
                        </div>
                    </div>

                    <!-- address input-->
                    <div class="form-group">
                        <label class="col-md-4 control-label" for="password">Address</label>
                        <div class="col-md-4">
                            <input id="childAddress" name="childAddress" type="text" placeholder="Please enter Address" class="form-control input-md" required="">                            
                        </div>
                    </div>
                    <!-- Phone input-->
                    <div class="form-group">
                        <label class="col-md-4 control-label" for="password">Phone</label>
                        <div class="col-md-4">
                            <input id="childPhone" name="childPhone" type="number" placeholder="Please provide Mobile Number" class="form-control input-md" required="">                            
                        </div>
                    </div>
                    <!-- Button (Double) -->
                    <div class="form-group">
                        <label class="col-md-4 control-label" for="button1id"></label>
                        <div class="col-md-8">
                            <button type="submit" class="btn btn-info">Register</button>
                        </div>
                    </div>
                </form>
            </div>
            <div id="removechild" class="tab-pane fade">
                <h3>REMOVE CHILD</h3>
                <p style="color: black;">Please enter the below details to remove a child</p>
                <form class="form-horizontal" method="post" action="/removechild">
                    <div class="form-group">
                        <label class="col-md-4 control-label">Child First Name</label>
                        <div class="col-md-4">
                            <input name="childFirstName" type="text" placeholder="Enter Child First Name" class="form-control input-md" required="">

                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-4 control-label">Child Last Name</label>
                        <div class="col-md-4">
                            <input name="childLastName" type="text" placeholder="Enter Child Last Name" class="form-control input-md" required="">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-4 control-label"></label>
                        <div class="col-md-8">
                            <button type="submit" class="btn btn-info">Remove</button>
                        </div>
                    </div>
                </form>

                <br>
                <br>
                <br>
                <br>
                <br>
            </div>
