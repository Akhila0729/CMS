<% include ./partials/header %>
<% include ./partials/navBar %>
  <div class="container">
        <div class="text-center">
            <h1 class="nice">Registration Form</h1>
        </div>
        <form class="well form-horizontal" action="/register" method="post" >
            <fieldset>
                <!-- firstname input-->
                <div class="form-group">
                    <label class="col-md-4 control-label">Firstname</label>        
                    <div class="col-md-4">
                        <input  name="user[fname]" type="text" placeholder="Firstname" class="form-control input-md" required>
                    </div>
                </div>
            
                <!-- lastname input-->
                <div class="form-group">
                    <label class="col-md-4 control-label">Lastname</label>        
                    <div class="col-md-4">
                        <input name="user[lname]" type="text" placeholder="Lastname" class="form-control input-md" required>
                    </div>
                </div>
                    
                <!-- user name-->
                <div class="form-group">
                    <label class="col-md-4 control-label">User name</label>        
                    <div class="col-md-4">
                        <input name="user[username]" type="text" placeholder="username" class="form-control input-md" required>
                    </div>
                </div> 

                <!-- user name-->
                <div class="form-group">
                    <label class="col-md-4 control-label">password</label>        
                    <div class="col-md-4">
                        <input name="user[password]" type="password" placeholder="password" class="form-control input-md" required> 
                    </div>
                </div> 

                <!-- user name-->
                <div class="form-group">
                    <label class="col-md-4 control-label">re-enter password</label>        
                    <div class="col-md-4">
                        <input name="user[repassword]" type="password" placeholder="re-enter password" class="form-control input-md" required>
                    </div>
                </div>        
                    
                <!-- Gender Input -->
                <div class="form-group">
                  <label class="col-md-4 control-label">Gender</label>        
                  <div class="col-md-4">
                        <select value="user[gender]" name="gender" class= "form-control">
                            <option value="user[gender]" >male</option>
                            <option value="user[gender]">female</option>
                        </select>
                  </div>
                </div>
                <!-- Email input-->
                <div class="form-group">
                    <label class="col-md-4 control-label">Email</label>
                    <div class="col-md-4">
                        <input  name="user[email]" type="email" placeholder="Email" class="form-control input-md" required>
                    </div>
                </div>
                <!-- address input-->
                <div class="form-group">
                    <label class="col-md-4 control-label">Address</label>        
                    <div class="col-md-4">
                        <input name="user[address]" type="text" placeholder="Address" class="form-control input-md" required>
                    </div>
                </div>
                <!-- Phone input-->
                <div class="form-group">
                    <label class="col-md-4 control-label" for="password">Phone</label>        
                    <div class="col-md-4">
                        <input name="user[phone]" type="number" placeholder="Phone number" class="form-control input-md" required>
                    </div>
                </div>
                <!-- Button (Double) -->
                <div class="form-group">
                    <label class="col-md-4 control-label"></label>        
                    <div class="col-md-8">
                        <button type="submit" class="btn btn-info">Register</button>
                    </div>
                </div>
            </fieldset>
        </form>
    </div> 
<% include ./partials/footer %>    